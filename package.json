{
  "private": true,
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "changelog": "lerna-changelog",
    "build": "father build",
    "clean": "lerna clean -y",
    "publish": "npm run build && lerna publish",
    "test": "node scripts/startBuild.js && umi-test test --forceExit --coverage",
    "lint-staged": "lint-staged",
    "lint-staged:js": "eslint --fix --ext .js,.jsx,.ts,.tsx",
    "lint": "eslint --fix --cache --ext .js,.jsx,.ts,.tsx --format=pretty ./packages"
  },
  "devDependencies": {
    "@types/jest": "^24.0.5",
    "@umijs/fabric": "^1.2.1",
    "eslint": "^5.16.0",
    "father": "^2.24.0",
    "glob": "^7.1.5",
    "husky": "^3.0.9",
    "lerna": "^3.6.0",
    "lerna-changelog": "^0.8.2",
    "lint-staged": "^9.4.2",
    "lodash": "^4.17.15",
    "prettier": "^1.18.2",
    "umi": "^2.10.6",
    "umi-plugin-react": "^1.12.7",
    "umi-test": "^1.8.2",
    "umi-types": "^0.3.15",
    "umi-utils": "^1.7.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint-staged"
    }
  },
  "lint-staged": {
    "**/*.{js,jsx,tsx,ts,less,json}": [
      "prettier --write",
      "git add"
    ],
    "**/*.{js,jsx}": "npm run lint-staged:js",
    "**/*.{js,ts,tsx}": "npm run lint-staged:js"
  }
}
